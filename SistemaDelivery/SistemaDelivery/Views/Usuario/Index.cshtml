                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                            <p class="dropdown-item">@Html.ActionLink("CLIENTES CADASTRADOS", "LoginView", "Login")</p>
                                            <p class="dropdown-item">@Html.ActionLink("CADASTRAR NOVO", "LoginView", "Login")</p>
                                        </div>
                                    </li>

                                </ul>

                            </div>
