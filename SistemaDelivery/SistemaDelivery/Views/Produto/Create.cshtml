@model Model.Models.Produto

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<center>
    <div class="form-horizontal">
        <div class="container text-center">
            <div class="row thumbnail">
                <h4> Produto </h4>
                <hr />
                <div class="col-md-offset-1 col-md-10 configdiv">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          
                    <div class="form-group">
                        @Html.LabelFor(model => model.TipoProduto.Tipo, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-4">
                            Água @Html.RadioButtonFor(model => model.TipoProduto.Tipo, "Água", new { htmlAttributes = new { @class = "form-control" } })
                            Gás @Html.RadioButtonFor(model => model.TipoProduto.Tipo, "Gás", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TipoProduto.Tipo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TipoProduto.Marca, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.TipoProduto.Id, (SelectList)ViewBag.ListaMarca, "Selecione...", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TipoProduto.Descricao, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.TipoProduto.Id, (SelectList)ViewBag.ListaDescricao, "Selecione...", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Preco, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-5" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-1">
                            <input type="submit" value="Criar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-11 col-md-2">
                    @Html.ActionLink("Voltar", "Index")
                </div>
            </div>
        </div>
    </div>
</center>
}

